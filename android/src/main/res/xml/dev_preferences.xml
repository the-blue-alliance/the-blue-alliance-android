<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_header_api"
        app:iconSpaceReserved="false">
        <Preference
            app:key="redownload_data"
            app:persistent="false"
            app:selectable="true"
            app:summary="@string/pref_redownload_data_detail"
            app:title="@string/pref_redownload_data"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="clear_okhttp_cache"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/pref_clear_okhttp"
            app:summary="@string/pref_clear_okhttp_detail"
            app:iconSpaceReserved="false"/>
        <EditTextPreference
            app:key="tba_host"
            app:summary="@string/pref_tba_host_detail"
            app:title="@string/pref_tba_host"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="update_api_status"
            app:persistent="false"
            app:selectable="true"
            app:summary="@string/pref_update_status_detail"
            app:title="@string/pref_update_status"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="refresh_remote_config"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/pref_refresh_remote_config"
            app:summary="@string/pref_refresh_remote_config_detail"
            app:iconSpaceReserved="false"/>
        <EditTextPreference
            app:key="config_lookup"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/pref_query_config"
            app:summary="@string/pref_query_config_detail"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_account"
        app:iconSpaceReserved="false">
        <Preference
            app:key="gcm_registration_id"
            app:title="@string/pref_gcm_token"
            app:iconSpaceReserved="false"
            app:enabled="false" />
        <Preference
            app:key="gcm_register"
            app:selectable="true"
            app:title="@string/pref_gcm_register"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="update_mytba"
            app:selectable="true"
            app:title="@string/pref_update_mytba"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="migrate_auth"
            app:selectable="true"
            app:title="@string/pref_migrate_legacy_auth"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="add_mytba_item"
            app:selectable="true"
            app:title="Add sample item to myTBA"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_analytics"
        app:iconSpaceReserved="false">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="analytics_debug_key"
            app:summary="@string/pref_analytics_detail"
            app:title="@string/pref_analytics_key"
            app:iconSpaceReserved="false"/>
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="analytics_dry_run"
            app:summary="@string/pref_dry_run_detail"
            app:title="@string/pref_dry_run"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>


</PreferenceScreen>