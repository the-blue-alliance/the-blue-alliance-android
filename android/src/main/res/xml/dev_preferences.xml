<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_api">
        <Preference
                android:key="redownload_data"
                android:persistent="false"
                android:selectable="true"
                android:summary="@string/pref_redownload_data_detail"
                android:title="@string/pref_redownload_data"/>
        <Preference
                android:key="clear_okhttp_cache"
                android:persistent="false"
                android:selectable="true"
                android:title="@string/pref_clear_okhttp"
                android:summary="@string/pref_clear_okhttp_detail"/>
        <EditTextPreference
                android:key="tba_host"
                android:summary="@string/pref_tba_host_detail"
                android:title="@string/pref_tba_host"/>
        <Preference
                android:key="update_api_status"
                android:persistent="false"
                android:selectable="true"
                android:summary="@string/pref_update_status_detail"
                android:title="@string/pref_update_status"/>
        <Preference
                android:key="refresh_remote_config"
                android:persistent="false"
                android:selectable="true"
                android:title="@string/pref_refresh_remote_config"
                android:summary="@string/pref_refresh_remote_config_detail"/>
        <EditTextPreference
                android:key="config_lookup"
                android:persistent="false"
                android:selectable="true"
                android:title="@string/pref_query_config"
                android:summary="@string/pref_query_config_detail" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_account">
        <Preference
                android:key="gcm_register"
                android:selectable="true"
                android:title="@string/pref_gcm_register" />
        <Preference
                android:key="update_mytba"
                android:selectable="true"
                android:title="@string/pref_update_mytba" />
        <Preference
                android:key="migrate_auth"
                android:selectable="true"
                android:title="@string/pref_migrate_legacy_auth" />
        <Preference
                android:key="add_mytba_item"
                android:selectable="true"
                android:title="Add sample item to myTBA"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_analytics">
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="analytics_debug_key"
                android:summary="@string/pref_analytics_detail"
                android:title="@string/pref_analytics_key"/>
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="analytics_dry_run"
                android:summary="@string/pref_dry_run_detail"
                android:title="@string/pref_dry_run"/>
    </PreferenceCategory>


</PreferenceScreen>