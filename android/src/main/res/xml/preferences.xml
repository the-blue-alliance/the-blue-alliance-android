<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">

    <PreferenceCategory
        app:title="@string/pref_header_account"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:key="mytba_enabled"
            app:persistent="false"
            app:title="@string/is_mytba_enabled"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_notifications"
        app:iconSpaceReserved="false">
        <Preference
            app:key="notifications"
            app:persistent="false"
            app:title="@string/notification_settings"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_general"
        app:iconSpaceReserved="false">
        <ListPreference
            app:key="dark_mode"
            app:title="@string/pref_dark_mode"
            app:summary="@string/pref_dark_mode_summary"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_appinfo"
        app:iconSpaceReserved="false">
        <Preference
            app:key="tba_link"
            app:persistent="false"
            app:selectable="true"
            app:summary="@string/tbasite_summary"
            app:title="@string/tbasite_label"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="github_link"
            app:persistent="false"
            app:selectable="true"
            app:summary="@string/github_summary"
            app:title="@string/github_label"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="contributors"
            app:persistent="false"
            app:selectable="true"
            app:summary="@string/contributors_summary"
            app:title="@string/contributors"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="changelog"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/changelog"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="app_version"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/settings_build_info_label"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="licenses"
            app:persistent="false"
            app:selectable="true"
            app:title="@string/license_label"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>