<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="colorControlHighlight">@color/control_highlight</item>-->
        <!-- Hides the shadow below the actionbar -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Ensures that the entire screen is blue while the layout is being inflated -->
    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- on v21 or later, this lets us draw the status bar background. on < v21,
    this is the same as simply not showing the action bar. -->
    <style name="AppThemeNoActionBarTranslucentStatus" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoItemCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="InfoItemLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="InfoItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="InfoItemImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="InfoItemButtonBarImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="InfoItemDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="InfoItemFullWidthDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NavDrawerIconStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="NavDrawerLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_text_color_selected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentOverlayStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="InfoOverlayStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="android:background">@color/lighter_blue</item>
        <item name="android:drawableLeft">@drawable/ic_action_about_blue</item>
    </style>

    <style name="WarningOverlayStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="android:background">@color/lighter_red</item>
        <item name="android:drawableLeft">@drawable/ic_action_warning_blue</item>
    </style>

    <style name="NoDataFoundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="DropDownNavStyle" parent="@android:style/Widget.Holo.Light.Spinner"/>

    <style name="ListItemButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DefaultToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">72dp</item>
    </style>

    <style name="DefaultLightToolbarStyle" parent="DefaultToolbarStyle">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Used for the checkboxes in the gameday ticker filterer -->

    <style name="GamedayTickerCheckboxUpcomingMatch" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_upcoming_match_header</item>
    </style>

    <style name="GamedayTickerCheckboxMatchResults" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_match_results_header</item>
    </style>

    <style name="GamedayTickerCheckboxScheduleUpdated" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_schedule_updates_header</item>
    </style>

    <style name="GamedayTickerCheckboxCompetitionLevelStarting" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_level_starting_header</item>
    </style>

    <style name="GamedayTickerCheckboxAllianceSelection" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_alliance_selection_header</item>
    </style>

    <style name="GamedayTickerCheckboxAwardsPosted" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gameday_ticker_awards_header</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="normalText" >
        <item name="android:textStyle">normal</item>
    </style>

</resources>
