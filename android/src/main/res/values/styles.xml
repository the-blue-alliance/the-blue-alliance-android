<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="InfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="InfoItemLabelStyle" parent="InfoItemTextStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InfoItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="InfoItemImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="InfoItemButtonBarImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="InfoItemNavigationArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_action_forward</item>
    </style>

    <style name="NavDrawerIconStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NavDrawerLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/nav_text_color_selected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="NavDrawerSmallLabelStyle" parent="NavDrawerLabelStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

</resources>
