<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
<androidx.gridlayout.widget.GridLayout
            app:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/breakdown2015_container"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/column_header_gray"
            app:columnCount="3"
            app:rowCount="30"
            app:alignmentMode="alignBounds" >

    <!-- Teams -->
    <TextView
            android:id="@+id/breakdown_red1"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 1"/>
    <TextView
            android:text="@string/breakdown_teams"
            style="@style/breakdown_categorySubtotal"
            app:layout_rowSpan="3" />
    <TextView
            android:id="@+id/breakdown_blue1"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 1"/>
    <TextView
            android:id="@+id/breakdown_red2"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 2"/>
    <TextView
            android:id="@+id/breakdown_blue2"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 2"/>
    <TextView
            android:id="@+id/breakdown_red3"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 3"/>
    <TextView
            android:id="@+id/breakdown_blue3"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 3"/>

    <!-- Auto Totes -->
    <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_totes_icon_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_menu_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_tote_points_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 20)"/>
    </LinearLayout>
    <TextView
            android:text="@string/breakdown2015_auto_totes"
            style="@style/breakdown_category" />
    <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_totes_icon_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_more_horiz_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_tote_points_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 6)"/>
    </LinearLayout>

    <!-- Auto Containers -->
    <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_containers_icon_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_clear_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_container_points_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""/>
    </LinearLayout>
    <TextView
            android:text="@string/breakdown2015_auto_container_set"
            style="@style/breakdown_category" />
    <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_containers_icon_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_check_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_container_points_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 8)"/>
    </LinearLayout>

    <!-- Robot Set -->
    <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_robots_icon_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_check_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_robot_points_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 4)"/>
    </LinearLayout>
    <TextView
            android:text="@string/breakdown2015_auto_robot_set"
            style="@style/breakdown_category" />
    <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_auto_robots_icon_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_clear_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_auto_robot_points_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""/>
    </LinearLayout>

    <!-- Auto Total -->
    <TextView
            android:id="@+id/breakdown_auto_total_red"
            style="@style/breakdown_redTotal"
            tools:text="24"/>

    <TextView
            android:text="@string/breakdown_auto_total"
            style="@style/breakdown_categoryTotal" />

    <TextView
            android:id="@+id/breakdown_auto_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="14"/>

    <!-- Teleop Totes -->
    <TextView
            android:id="@+id/breakdown2015_tote_points_red"
            style="@style/breakdown_redItem"
            tools:text="14"/>

    <TextView
            android:text="@string/breakdown2015_tote_points"
            style="@style/breakdown_category" />

    <TextView
            android:id="@+id/breakdown2015_tote_points_blue"
            style="@style/breakdown_blueItem"
            tools:text="46"/>

    <!-- Teleop Containers -->
    <TextView
            android:id="@+id/breakdown2015_container_points_red"
            style="@style/breakdown_redItem"
            tools:text="32"/>

    <TextView
            android:text="@string/breakdown2015_container_points"
            style="@style/breakdown_category" />

    <TextView
            android:id="@+id/breakdown2015_container_points_blue"
            style="@style/breakdown_blueItem"
            tools:text="76"/>

    <!-- Teleop Litter -->
    <TextView
            android:id="@+id/breakdown2015_litter_points_red"
            style="@style/breakdown_redItem"
            tools:text="32"/>

    <TextView
            android:text="@string/breakdown2015_litter_points"
            style="@style/breakdown_category" />

    <TextView
            android:id="@+id/breakdown2015_litter_points_blue"
            style="@style/breakdown_blueItem"
            tools:text="76"/>

    <!-- Teleop Total -->
    <TextView
            android:id="@+id/breakdown_teleop_total_red"
            style="@style/breakdown_redItem"
            tools:text="68"/>

    <TextView
            android:text="@string/breakdown_teleop_total"
            style="@style/breakdown_categoryTotal" />

    <TextView
            android:id="@+id/breakdown_teleop_total_blue"
            style="@style/breakdown_blueItem"
            tools:text="157"/>

    <!-- Coop -->
    <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_coop_icon_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_more_horiz_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_coop_points_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 20)"/>
    </LinearLayout>
    <TextView
            android:text="@string/breakdown2015_coopertition_points"
            style="@style/breakdown_category" />
    <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/breakdown2015_coop_icon_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_more_horiz_black_24dp"/>
        <TextView
                android:id="@+id/breakdown2015_coop_points_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+ 20)"/>
    </LinearLayout>

    <!-- Fouls -->
    <TextView
            android:id="@+id/breakdown_fouls_red"
            style="@style/breakdown_redItem"
            tools:text="- 5"/>

    <TextView
            android:text="@string/breakdown_foul"
            style="@style/breakdown_category" />

    <TextView
            android:id="@+id/breakdown_fouls_blue"
            style="@style/breakdown_blueItem"
            tools:text="- 10"/>

    <!-- Adjustments -->
    <TextView
            android:id="@+id/breakdown_adjust_red"
            style="@style/breakdown_redItem"
            tools:text="0"/>

    <TextView
            android:text="@string/breakdown_adjust"
            style="@style/breakdown_category" />

    <TextView
            android:id="@+id/breakdown_adjust_blue"
            style="@style/breakdown_blueItem"
            tools:text="0"/>

    <!-- Total -->
    <TextView
            android:id="@+id/breakdown_total_red"
            style="@style/breakdown_redTotal"
            tools:text="100"/>

    <TextView
            android:text="@string/breakdown_total"
            style="@style/breakdown_categoryTotal" />

    <TextView
            android:id="@+id/breakdown_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="120"/>


</androidx.gridlayout.widget.GridLayout>
</ScrollView>