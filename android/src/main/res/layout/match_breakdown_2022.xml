<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.gridlayout.widget.GridLayout
        app:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/breakdown2022_container"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/column_header_gray"
        app:columnCount="3"
        app:rowCount="29"
        app:alignmentMode="alignBounds" >

        <!-- Teams -->
        <TextView
            android:id="@+id/breakdown_red1"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 1"/>
        <TextView
            android:text="@string/breakdown_teams"
            style="@style/breakdown_categorySubtotal"
            app:layout_rowSpan="3" />
        <TextView
            android:id="@+id/breakdown_blue1"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 1"/>
        <TextView
            android:id="@+id/breakdown_red2"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 2"/>
        <TextView
            android:id="@+id/breakdown_blue2"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 2"/>
        <TextView
            android:id="@+id/breakdown_red3"
            style="@style/breakdown_redItemSmall"
            tools:text="Red 3"/>
        <TextView
            android:id="@+id/breakdown_blue3"
            style="@style/breakdown_blueItemSmall"
            tools:text="Blue 3"/>

        <!-- Auto Taxi -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/breakdown2022_red_auto_taxi_robot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_close_black_24dp" />
            <ImageView
                android:id="@+id/breakdown2022_red_auto_taxi_robot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_check_black_24dp"/>
            <ImageView
                android:id="@+id/breakdown2022_red_auto_taxi_robot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_close_black_24dp"/>
            <TextView
                android:id="@+id/breakdown2022_red_auto_taxi_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+10)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_auto_taxi"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/breakdown2022_blue_auto_taxi_robot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_close_black_24dp"/>
            <ImageView
                android:id="@+id/breakdown2022_blue_auto_taxi_robot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_check_black_24dp"/>
            <ImageView
                android:id="@+id/breakdown2022_blue_auto_taxi_robot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/primary_text_color"
                android:src="@drawable/ic_check_black_24dp"/>
            <TextView
                android:id="@+id/breakdown2022_blue_auto_taxi_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(+20)"/>
        </LinearLayout>

        <!-- Auto Cargo  -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_auto_lower_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
            <TextView
                android:id="@+id/breakdown2022_red_auto_upper_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_up_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_auto_cargo"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_auto_lower_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
            <TextView
                android:id="@+id/breakdown2022_blue_auto_upper_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_up_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="1"/>
        </LinearLayout>

        <!-- Auto Cargo Points -->
        <TextView
            android:id="@+id/breakdown2022_red_auto_cargo"
            style="@style/breakdown_redItem"
            tools:text="10"/>
        <TextView
            android:text="@string/breakdown2022_auto_cargo_points"
            style="@style/breakdown_category" />
        <TextView
            android:id="@+id/breakdown2022_blue_auto_cargo"
            style="@style/breakdown_blueItem"
            tools:text="25"/>

        <!-- Auto Quintet -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/breakdown2022_red_quintet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/primary_text_color"
                tools:background="@drawable/ic_check_black_24dp" />
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_auto_quintet"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/breakdown2022_blue_quintet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/primary_text_color"
                tools:background="@drawable/ic_check_black_24dp" />
        </LinearLayout>

        <!-- Auto Points -->
        <TextView
            android:id="@+id/breakdown_auto_total_red"
            style="@style/breakdown_redTotal"
            tools:text="60"/>
        <TextView
            android:text="@string/breakdown_auto_total"
            style="@style/breakdown_categoryTotal" />
        <TextView
            android:id="@+id/breakdown_auto_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="5"/>

        <!-- Teleop Cargo  -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_teleop_lower_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
            <TextView
                android:id="@+id/breakdown2022_red_teleop_upper_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_up_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_teleop_cargo"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_teleop_lower_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="2"/>
            <TextView
                android:id="@+id/breakdown2022_blue_teleop_upper_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_up_black_24dp"
                app:drawableTint="@color/primary_text_color"
                tools:text="1"/>
        </LinearLayout>

        <!-- Teleop Cargo Points -->
        <TextView
            android:id="@+id/breakdown2022_red_teleop_cargo"
            style="@style/breakdown_redItem"
            tools:text="10"/>
        <TextView
            android:text="@string/breakdown2022_teleop_cargo_points"
            style="@style/breakdown_category" />
        <TextView
            android:id="@+id/breakdown2022_blue_teleop_cargo"
            style="@style/breakdown_blueItem"
            tools:text="25"/>

        <!-- Endgame Climb -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_endgame_robot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Park (+5)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown_endgame_robot_1"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_endgame_robot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Hang (+25)"/>
        </LinearLayout>
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_endgame_robot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Park (+5)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown_endgame_robot_2"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_endgame_robot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Hang (+25)"/>
        </LinearLayout>
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_endgame_robot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Hang (+25)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown_endgame_robot_3"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_endgame_robot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Hang (+25)"/>
        </LinearLayout>

        <!-- Endgame Points -->
        <TextView
            android:id="@+id/breakdown_endgame_total_red"
            style="@style/breakdown_redTotal"
            tools:text="30"/>
        <TextView
            android:text="@string/breakdown2022_endgame_points"
            style="@style/breakdown_categorySubtotal" />
        <TextView
            android:id="@+id/breakdown_endgame_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="75"/>

        <!-- Teleop Total -->
        <TextView
            android:id="@+id/breakdown_teleop_total_red"
            style="@style/breakdown_redTotal"
            tools:text="40"/>
        <TextView
            android:text="@string/breakdown_teleop_total"
            style="@style/breakdown_categoryTotal" />
        <TextView
            android:id="@+id/breakdown_teleop_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="80"/>

        <!-- Cargo Bonus -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_cargo_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTint="@color/primary_text_color"
                android:drawableLeft="@drawable/ic_close_black_24dp"
                tools:text=""/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_cargo_bonus"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_cargo_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTint="@color/primary_text_color"
                android:drawableLeft="@drawable/ic_check_black_24dp"
                tools:text="(+1 RP)"/>
        </LinearLayout>

        <!-- Hangar Bonus -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_red_hangar_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTint="@color/primary_text_color"
                android:drawableLeft="@drawable/ic_close_black_24dp"
                tools:text=""/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2022_hangar_bonus"
            style="@style/breakdown_category" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2022_blue_hangar_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTint="@color/primary_text_color"
                android:drawableLeft="@drawable/ic_check_black_24dp"
                tools:text="(+1 RP)"/>
        </LinearLayout>

        <!-- Fouls -->
        <TextView
            android:id="@+id/breakdown_fouls_red"
            style="@style/breakdown_redItem"
            tools:text="+ 0 / + 0"/>
        <TextView
            android:text="@string/breakdown_foul_tech_foul"
            style="@style/breakdown_category" />
        <TextView
            android:id="@+id/breakdown_fouls_blue"
            style="@style/breakdown_blueItem"
            tools:text="+ 5 / + 15 / + 1 RP"/>

        <!-- Adjustments -->
        <TextView
            android:id="@+id/breakdown_adjust_red"
            style="@style/breakdown_redItem"
            tools:text="0"/>
        <TextView
            android:text="@string/breakdown_adjust"
            style="@style/breakdown_category" />
        <TextView
            android:id="@+id/breakdown_adjust_blue"
            style="@style/breakdown_blueItem"
            tools:text="0"/>

        <!-- Total -->
        <TextView
            android:id="@+id/breakdown_total_red"
            style="@style/breakdown_redTotal"
            tools:text="100"/>
        <TextView
            android:text="@string/breakdown_total"
            style="@style/breakdown_categoryTotal" />
        <TextView
            android:id="@+id/breakdown_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="90"/>

        <!-- Ranking Points -->
        <TextView
            android:id="@+id/breakdown_red_rp"
            style="@style/breakdown_redTotal"
            tools:text="1 RP"/>
        <TextView
            android:text="@string/breakdown_rp"
            android:id="@+id/breakdown_rp_header"
            style="@style/breakdown_categorySubtotal" />
        <TextView
            android:id="@+id/breakdown_blue_rp"
            style="@style/breakdown_blueTotal"
            tools:text="2 RP"/>
    </androidx.gridlayout.widget.GridLayout>
</ScrollView>