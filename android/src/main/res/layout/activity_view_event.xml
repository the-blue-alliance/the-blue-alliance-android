<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/overlay_container"
        android:orientation="vertical">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:pstsIndicatorColor="@color/pager_indicator_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/overlay_container"
        style="@style/ActivityOverlayStyle">

        <TextView
            android:id="@+id/info_container"
            style="@style/ActivityInfoStyle"
            android:visibility="gone" />

        <TextView
            android:id="@id/warning_container"
            style="@style/ActivityWarningStyle"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>