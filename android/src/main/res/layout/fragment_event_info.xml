<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_half_pref_height"
            android:id="@+id/event_date"
            android:text="Event Date"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_event" />

        <TextView
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_half_pref_height"
            android:id="@+id/event_location"
            android:text="Event Location"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_place" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/list_half_pref_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/social_container">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_web_site"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_facebook"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_twitter"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_youtube"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cd"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_usfirst"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/dark_grey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_pref_height"
            android:orientation="vertical"
            android:id="@+id/last_match_container"
            android:gravity="center">

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_match"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/dark_grey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_pref_height"
            android:orientation="vertical"
            android:id="@+id/next_match_container"
            android:gravity="center">

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_match"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/dark_grey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_pref_height"
            android:orientation="horizontal"
            android:id="@+id/top_teams_container"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_teams"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/dark_grey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_pref_height"
            android:orientation="horizontal"
            android:id="@+id/top_opr_container"
            android:gravity="center_horizontal">

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_opr"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>