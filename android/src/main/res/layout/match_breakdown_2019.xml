                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_hatch_panel"
                tools:text="4"/>
            <TextView
                android:id="@+id/breakdown2019_blue_rocket_2_cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_cargo"
                tools:text="3"/>
        </LinearLayout>

        <!-- Total Hatch -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/breakdown2019_red_hatch_panel_points"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_hatch_panel"
                tools:text="3 (+ 6)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2019_total_hatch_panel_points"
            style="@style/breakdown_categorySubtotal" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/breakdown2019_blue_hatch_panel_points"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_hatch_panel"
                tools:text="9 (+ 18)"/>
        </LinearLayout>

        <!-- Total Cargo -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/breakdown2019_red_cargo_points"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_cargo"
                tools:text="2 (+ 6)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2019_total_cargo_points"
            style="@style/breakdown_categorySubtotal" />
        <LinearLayout
            style="@style/breakdown_blueItem"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/breakdown2019_blue_cargo_points"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/breakdown2019_cargo"
                tools:text="5 (+ 20)"/>
