            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2019_red_hab_robot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:drawableLeft="@drawable/ic_close_black_24dp"
