            style="@style/breakdown_categorySubtotal" />
        <TextView
            android:id="@+id/breakdown2019_hab_total_blue"
            style="@style/breakdown_blueTotal"
            tools:text="5"/>

        <!-- Teleop Total -->
        <TextView
