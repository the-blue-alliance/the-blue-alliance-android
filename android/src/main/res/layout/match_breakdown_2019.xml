        <!-- Rocket 2 -->
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2019_red_rocket_2_panels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
