                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:drawableLeft="@drawable/baseline_looks_two_black_24"
                android:drawableTint="@color/primary_text_color"
                tools:text="(+ 6)"/>
        </LinearLayout>
        <LinearLayout
            style="@style/breakdown_redItem"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakdown2019_red_hab_robot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:drawableLeft="@drawable/baseline_looks_one_black_24"
                android:drawableTint="@color/primary_text_color"
                tools:text="(+ 3)"/>
        </LinearLayout>
        <TextView
            android:text="@string/breakdown2019_hab_robot_3"
            style="@style/breakdown_category" />
        <LinearLayout
